<div>
  <div class = "location-service-access-request">
  </div>

  <h4>List of existing Sound Groups</h4>
  <div class = 'sound-group-list'>
    <% @sound_groups.each do |group| %>
      <%= link_to group.name, sound_group_url(group) %>
    <% end %>
  </div>


  <div class = 'sound-group-container'>
    <h4>New Sound Group Form</h4>
    <form action = "" method= 'POST' >
      <div>
        <label>Name of Sound Group:
          <br>
          <textarea value = "" name = 'sound_group[name]'
            placeholder="Input your Sound Group Name here." >
          </textarea>
        </label>
      </div>

      <div class = 'submit-button-container'>
        <input class = "submit-button" type="submit" value="New Sound Group">
      </div>

      <div>
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" >
        <input type = "hidden" name = "sound_group[leader_id]" value = "<%= current_user.id %>" >
      </div>

    </form>
  </div>
</div>
