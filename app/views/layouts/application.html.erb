<!DOCTYPE html>
<html>
  <head>
    <title>MobileSurround</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= flash[:errors] %>
    <% if logged_in? %>
      <%= "Welcome, #{current_user.username}" %>
      <%= button_to "Sign Out", session_url, :method => :delete %>
      <%= button_to "Return To Home Page", sound_groups_url, :method => :get %>
    <% else %>
      <%= button_to "Log In", new_session_url, :method => :get %>
      <%= button_to "Sign Up", new_user_url, :method => :get%>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
